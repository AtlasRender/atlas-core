{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "outDir": "dest",
    "resolveJsonModule": true,
    "removeComments": true,
    "declaration": false
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}